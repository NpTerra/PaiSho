<?xml version="1.0" encoding="UTF-8" ?>
<configuration>

    <appender name="info" class="ch.qos.logback.core.ConsoleAppender">
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>INFO</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>

        <encoder>
            <pattern>
                %magenta(%d{HH:mm:ss}) %highlight(%-5level) [%boldCyan(%thread)] %logger{20} - %msg%n
            </pattern>
        </encoder>
    </appender>

    <appender name="debug" class="ch.qos.logback.core.ConsoleAppender">
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>DEBUG</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>

        <encoder>
            <pattern>
                %magenta(%d{HH:mm:ss}) %boldGreen(%-5level) [%boldCyan(%thread)] %green(%logger{20} - %msg%n)
            </pattern>
        </encoder>
    </appender>

    <appender name="warning" class="ch.qos.logback.core.ConsoleAppender">
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>WARN</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>

        <encoder>
            <pattern>
                %magenta(%d{HH:mm:ss}) %boldYellow(%-5level) [%boldCyan(%thread)] %yellow(%logger{20} - %msg%n)
            </pattern>
        </encoder>
    </appender>

    <appender name="error" class="ch.qos.logback.core.ConsoleAppender">
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>ERROR</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>

        <encoder>
            <pattern>
                %magenta(%d{HH:mm:ss}) %highlight(%-5level) [%boldCyan(%thread)] %red(%logger{20} - %msg%n%ex)%n
            </pattern>
        </encoder>
    </appender>

    <root level="DEBUG">
        <appender-ref ref="info" />
        <appender-ref ref="debug"/>
        <appender-ref ref="warning"/>
        <appender-ref ref="error"/>
    </root>

</configuration>
